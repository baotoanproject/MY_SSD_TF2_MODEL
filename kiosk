mkdir -p ~/.config/autostart

cat << 'EOF' > ~/.config/autostart/chromium.desktop
[Desktop Entry]
Version=1.0
Type=Application
Name=Chromium Kiosk
Comment=Start Chromium in kiosk mode
Exec=bash -c "sleep 5 && /usr/bin/chromium --noerrdialogs --disable-infobars --kiosk https://wb.wayfindy.com/welcome --incognito --start-fullscreen --user-data-dir=/tmp/chromium --disk-cache-dir=/dev/null"
X-GNOME-Autostart-enabled=true
OnlyShowIn=XFCE;
EOF


https://be9dd6b7a19f.ngrok-free.app/welcome
